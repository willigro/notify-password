<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.managerpassword.ManagerPasswordActivity">

  <LinearLayout
      android:layout_width="match_parent"
      android:orientation="vertical"
      android:layout_height="wrap_content">

      <EditText
          android:id="@+id/edtName"
          style="@style/EditText" />

      <CheckBox
          android:id="@+id/checkEnableNotifications"
          style="@style/CheckBox"
          android:text="@string/for_security_enable_notifications" />

      <EditText
          android:id="@+id/edtAmountToNotify"
          style="@style/EditTextNumber" />

      <include layout="@layout/password_permissions" />

      <Button
          android:id="@+id/btnUpdaterManager"
          style="@style/Button"/>
  </LinearLayout>

</ScrollView>