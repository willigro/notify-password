<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.listpasswords.ListPasswordsActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerPassword"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btnNewPassword" />

    <Button
        android:id="@+id/btnNewPassword"
        style="@style/ButtonConfirm"
        android:layout_alignParentBottom="true"
        android:text="@string/open_new_password_screen" />
</RelativeLayout>